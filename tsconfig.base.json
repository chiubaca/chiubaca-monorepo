{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strictNullChecks": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chiubaca-ui": ["libs/chiubaca-ui"],
      "@shared/types": ["libs/shared/types.ts"],
      "@shared/zod-schemas": ["libs/shared/zod-schemas.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
