---
import { ThemeToggle } from "@chiubaca-ui";

interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <slot name="head" />
    <title>chiubaca.com {title && `| ${title}`}</title>
  </head>
  <body>
    <header
      class="mx-auto flex max-w-[65ch] items-center justify-between px-5 py-10 md:px-0"
    >
      <div class="text-justify">
        <a href="/" class="text-xl">Alex Chiu</a>
      </div>

      <ThemeToggle />
    </header>

    <slot />

    <footer class="mx-auto max-w-[65ch] px-5 py-10 md:px-0">
      <hr />

      <div class="pt-10">
        <img
          loading="lazy"
          src="https://pbs.twimg.com/profile_images/1334863005708902402/kLOEM6gq_400x400.jpg"
          class="float-left mr-5 aspect-square w-16 rounded-full"
        />

        <p class="">
          I'm Alex. I'm a full-stack developer based in London. Here I publish
          musings about web development, life and other ramblings.
        </p>
      </div>

      <div class="py-10">
        <p>
          Follow me on: <a href="https://github.com/chiubaca"
            >Github<a>
              / <a href="https://twitter.com/chiubaca">X (Twitter)</a> / <a
                href="https://mas.to/@chiubaca">Mastodon</a
              > / <a href="https://www.linkedin.com/in/achiu1/">LinkedIn</a></a
            >
          </a>
        </p>
      </div>
    </footer>

    <script
      defer
      async
      src="https://cdn.counter.dev/script.js"
      data-id="91ee2db8-dc88-40a2-9529-ef18149e911b"
      data-utcoffset="0"></script>
  </body>
</html>
