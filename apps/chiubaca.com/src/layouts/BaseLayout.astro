---
import { ThemeToggle } from "@chiubaca-ui";

interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <slot name="head" />
    <title>chiubaca.com {title && `| ${title}`}</title>
  </head>
  <body>
    <header class="mx-auto flex max-w-[65ch] items-center justify-between">
      <a href="/">Alex Chiu</a>

      <ThemeToggle />
    </header>

    <slot />
  </body>
</html>

<script
  defer
  async
  src="https://cdn.counter.dev/script.js"
  data-id="91ee2db8-dc88-40a2-9529-ef18149e911b"
  data-utcoffset="0"></script>
