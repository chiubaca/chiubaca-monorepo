---
import { BaseLayout, type BaseLayoutProps as Props } from "@chiubaca-ui";

const { title, breadcrumbs } = Astro.props;
---

<BaseLayout titlePrefix="chiubaca.com" title={title} breadcrumbs={breadcrumbs}>
  <slot name="head" slot="head" />

  <slot />

  <div slot="footer">
    <img
      loading="lazy"
      src="https://pbs.twimg.com/profile_images/1334863005708902402/kLOEM6gq_400x400.jpg"
      class="float-left mr-5 aspect-square w-16 rounded-full"
    />
    <p class="">
      Hey I'm Alex Chiu ðŸ‘‹. I'm a full-stack developer based in London. Here I
      publish musings about web development, life and other ramblings.
    </p>

    <p class="pb-5 pt-10">
      Daily(ish) unrefined notes at <a
        class="link"
        href="https://notes.chiubaca.com/fleeting-notes"
      >
        notes.chiubaca.com</a
      >.
    </p>
  </div>

  <script
    defer
    async
    src="https://cdn.counter.dev/script.js"
    data-id="91ee2db8-dc88-40a2-9529-ef18149e911b"
    data-utcoffset="0"
    slot="scripts"></script>
  <script slot="scripts">
    (function () {
      window.counterscale = {
        q: [["set", "siteId", "chiubaca-com"], ["trackPageview"]],
      };
    })();
  </script>
  <script
    slot="scripts"
    id="counterscale-script"
    src="https://counterscale.chiubaca.workers.dev/tracker.js"
    defer></script>
</BaseLayout>
