---
import Chookie from "../components/ChookieIcon.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const blogs = await getCollection("permanentNotes");
const liveBlogs = blogs
  .filter((blog) => blog.data.status === "live")
  .sort((a, b) => b.data.publish_date.valueOf() - a.data.publish_date.valueOf())
  .slice(0, 5);

const fleetingNotes = await getCollection("fleetingNotes");
const latestFleetingNote = fleetingNotes.sort(
  (a, b) => b.data.publish_date.valueOf() - a.data.publish_date.valueOf()
)[0];
---

<Layout title="Home">
  <div class="flex justify-center">
    <AnimatedLogo />
  </div>
  <main class="max-w-3xl mx-auto">
    <section class="latest-blogs mt-8">
      <h2 class="font-mono mb-4 text-2xl font-semibold">Latest Blogs</h2>
      <div class="blog-list mt-4">
        {
          liveBlogs.map((blog) => {
            return (
              <div class="blog-post-summary mb-6 pb-0 last:mb-0 last:pb-0">
                <a
                  href={`/permanent-notes/${blog.id}/`}
                  class="blog-title text-xl font-semibold text-gray-900 no-underline block mb-1 font-mono hover:underline"
                >
                  {blog.data.title}
                </a>
                <p class="blog-date text-sm text-gray-600 m-0 font-mono">
                  {blog.data.publish_date.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </p>
              </div>
            );
          })
        }
      </div>
      <a
        href={`/blogs/`}
        class="pt-4 font-semibold text-gray-900 no-underline block mb-1 font-mono hover:underline"
      >
        All blogs ->
      </a>
    </section>
    <hr class="my-4" />
    <section>
      <h2 class="font-mono text-2xl font-semibold">Latest note</h2>
      <p class="blog-date text-sm text-gray-600 mb-4">
        {
          latestFleetingNote.data.publish_date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </p>
      <div class="blog-post-summary mb-6 pb-0 last:mb-0 last:pb-0">
        <article
          set:html={latestFleetingNote.rendered.html}
          class="max-h-80 overflow-auto"
        />

        <a
          href={`/notes/`}
          class="pt-4 text-gray-900 no-underline block mb-1 font-mono hover:underline"
        >
          All notes ->
        </a>
      </div>
    </section>

    <section class="pt-8">
      <img
        loading="lazy"
        src="https://cdn.bsky.app/img/avatar/plain/did:plc:yiq6xbxnjzcsxipd3qq3r2hv/bafkreify73ikrqasx3zdusnarp6qrx3b2b2zpy2ixhgklfnj5oqyrvizge@jpeg"
        class="float-left mr-5 aspect-square w-16 rounded-full"
      />
      <p class="">
        Hey I'm Alex Chiu ðŸ‘‹. I'm a senior software engineer based in London.
        Here I publish musings about web development, life and other ramblings.
      </p>
    </section>
  </main>
</Layout>
