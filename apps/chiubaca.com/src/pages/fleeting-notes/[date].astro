---
import { getCollection, getEntry, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const blogs = await getCollection("fleeting-notes");

  const slugPaths = blogs.map((blog) => {
    return {
      params: { date: blog.id },
    };
  });

  return slugPaths;
}

const { date } = Astro.params;
const entry = await getEntry("fleeting-notes", date);
console.log("entry", entry);

const { Content } = await render(entry);
// const publishedPermamentNoteUrl = `https://chiubaca.com/${entry.slug}`;
---

<BaseLayout
  breadcrumbs={[
    {
      href: `/fleeting-notes`,
      label: "fleeting-notes",
    },
    {
      href: `/fleeting-notes/${entry.id}`,
      label: entry.id,
    },
  ]}
>
  <meta name="robots" content="noindex" slot="head" />

  <div class="mt-15 max-w-3xl mx-auto px-5">
    <h1 class="text-2xl py-5 font-mono">{entry.id.replaceAll("-", "・")}</h1>

    <article class="prose mx-auto max-w-none prose-a:break-all">
      <Content />
    </article>

    <div class="link-hover link pt-10">
      <a
        href={`https://github.com/chiubaca/learning/blob/main/fleeting-notes/${entry.id}.md`}
      >
        Edit on GitHub ✏️
      </a>
    </div>
  </div>
</BaseLayout>
