---
import { noteTypes } from "@shared/zod-schemas";
import MainLayout from "../layouts/MainLayout.astro";

const noteTypeTitles = Object.values(noteTypes.enum).map((noteType) => {
  return noteType;
});
---

<MainLayout
  breadcrumbs={[
    {
      href: "/",
      label: "/ notes",
    },
  ]}
>
  <main class="">
    <ul class="flex flex-col gap-5 text-2xl">
      {
        noteTypeTitles.map((title) => {
          switch (title) {
            case "fleeting-notes":
              return (
                <a class="link-hover link" href={title}>
                  <li>📝 All Fleeting Notes</li>
                </a>
              );
            case "literature-notes":
              return (
                <a class="link-hover link" href={title}>
                  <li>📚 All Literature Notes</li>
                </a>
              );
            case "permanent-notes":
              return (
                <a class="link-hover link" href={title}>
                  <li>🧠 Permanent Notes</li>
                </a>
              );
            default:
              break;
          }
        })
      }

      <a class="link-hover link" href="/tags">
        <li>🔖 Tagged Notes</li>
      </a>
    </ul>
  </main>
</MainLayout>
